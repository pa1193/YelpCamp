<%include ../partials/header%>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item ">Info 2</li>
				<li class="list-group-item ">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail" >
				<img class="img-responsive" src="<%= campgrounds.image%>">
				<div class="caption-full">	
						<h4 class="pull-right">$9.00/night</h4>
						<h4>
							<a><%=campgrounds.name%></a>
						</h4>
						<p>
							<%=campgrounds.description%>
						</p>
						
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<hr>	
					<a class="btn btn-success" href="/campgrounds/<%= campgrounds._id%>/comments/new">Add New Comment</a>
				<br/>Comments:
				</div>
				<%campgrounds.comments.forEach(function(comments){%>
				<div class="row">	
						<div class="col-md-12">	
						<strong><%=comments.author%></strong>
							<span class="float-right">12 days ago</span>
							<p>
									<%=comments.text%>
							</p>
						</div>
				</div>
					
				<%});%>
			</div>
		</div>
	</div>
</div>

<%include ../partials/footer%>